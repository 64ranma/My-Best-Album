<h1>編集画面</h1>
<%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
  <h4>画像</h4>
  <% if @post.image.attached? %>
    <div>
       <%= image_tag @post.image, size: "20x20" %>
    </div>
  <% end %>
  <%= f.file_field :image, accept: "image/*" %>

  <h4>アルバム名</h4>
  <%= f.text_field :album_name %>

  <h4>歌手名</h4>
  <%= f.text_field :singer_name %>

  <h4>説明</h4>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>
  
  <p><%= link_to "戻る", post_path %></p>

<% end %>