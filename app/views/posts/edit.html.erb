<div class="container px-5 px-sm-0 mt-3">
  <h3>記事の編集</h3>
    <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
      <% if @post.image.attached? %>
        <%= image_tag @post.image, size:"80*80" %>
      <% end %>
    <%= f.file_field :image, accept: "image/*" %>
    <h6>アルバム名</h6>
      <%= f.text_field :album_name %>
    <h6>歌手名</h6>
      <%= f.text_field :singer_name %>
    <h6>説明</h6>
      <%= f.text_area :body, rows: "10", cols: "50"%>
      
    <%= f.submit '保存' %>
  
    <p><%= link_to "戻る", post_path %></p>
    <% end %>

</div>
