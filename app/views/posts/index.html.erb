<div class="container-fluid">
  <div class="row">
    <div class="col-md-3">          
      <%= form_with url: posts_path, method: :get do |f| %>
        <%= f.text_field :query ,placeholder: "歌手名・アルバムタイトル"%>
        <%= f.submit "検索" %>
      <% end %>
      <br></br>
    
      <h3><%= link_to "新規投稿", new_post_path, style: "color: black;" %></h3>
      <%= form_with model: @post do |f| %>
      <h6>画像</h6>
      <%= f.file_field :image, accept: "image/*" %>
      <h6>アルバム名</h6>
      <%= f.text_field :album_name %>
      <h6>歌手名</h6>
      <%= f.text_field :singer_name %>
      <h6>説明</h6>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
      <% end %>
    </div>
  
  
    <div class="post-wrap col-md-8 offset-md-1 offset-lg-0">
      <% @posts.each do |post| %>
        <div class="post-box">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image,size:"150x150" %>
          <% end %>
          <div class="post-comment">
            <p><%= truncate(post.body, length: 10) %>
              <%= link_to user_path(post.user) do %>
                <%= image_tag post.user.get_profile_image(20, 20) %>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 
  

