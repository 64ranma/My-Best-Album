<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.name %>さんの会員情報編集</h4>
      <table class="table table-borderless">
        <%= form_with model: [:admin, @user] do |f| %>
        <tr>
          <td>ID</td>
          <td><%= @user.id %></td>
        </tr>
        
        <tr>
          <td>Name</td>
          <td><%= f.text_field :name %>
        </tr>
        
        <tr>
          <td>Email</td>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>
        
        <tr>
          <td></td>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
