<div class="container px-5 px-sm-0 mt-3">
  <div class="row">
    <div class="col-md-3">
      <h1><%= @user.name %></h1>
      <%= image_tag @user.get_profile_image(80,80) %>
      <% if current_user == @user && @user.email != "guest@example.com" %>
        <div class="row">
          <%= link_to "プロフィール編集", edit_user_path(@user) %>
        </div>
      <% end %>
    </div>
    
    <div class="col-md-8 mt-3">
      <% @posts.each do |post| %>
        <div class="border border-bottom pb-3 mb-3 position-relative">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_image,size:"100x100" %>
          <% end %>
          <p>アルバム名：<%= post.album_name %></p>
          <p>歌手名：<%= post.singer_name %></p>
          <p>説明：<%= post.body %></p>

          <%= link_to "編集",edit_post_path(post), class:"edit-link" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
